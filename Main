public class Main {

    public static void main(String[] args) {

//  2. Создать программу, которая переворачивает вводимые строки (читает справа налево).
        String txt = "тестовый текст";
        int l = txt.length();
        Expression e = new Expression(txt);
        System.out.println(e.textReverse(l));

//  4* Реализовать увеличение (уменьшение) размера стека

        MyStack<Integer> myStack = new MyStack(8);

        myStack.push(1);
        myStack.push(2);
        myStack.push(3);
        myStack.push(4);
        myStack.push(5);
        myStack.push(6);

// тестим:
        //myStack.resize(5); // - будет ошибка, так как задается размер менее, чем текущий заполненный стек
        myStack.resize(6); // - размер по длинне заполненного стека
        //myStack.push(7);// - будет ошибка полного стека

        myStack.resize(7); // - увеличиваем размер стека
        myStack.push(7);// - добавляем элемент и все печатаем
        for (int i = 0; i < 7; i++) {
            System.out.println(myStack.pop());
        }


//  5*** Реализовать увеличение (уменьшение) размера очереди.
        MyQueue<Integer> myQueue = new MyQueue<>(5);
        myQueue.insert(1);
        myQueue.insert(2);
        myQueue.insert(3);
        System.out.println(myQueue);

        myQueue.resize(9);
        System.out.println(myQueue);

        System.out.println(myQueue.remove());
        System.out.println(myQueue.remove());
        System.out.println(myQueue);

        myQueue.insert(11);
        myQueue.insert(12);
        myQueue.insert(13);
        System.out.println(myQueue);


    }
}
